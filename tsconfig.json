{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      ".prisma/client": ["node_modules/.prisma/client"],
      ".prisma/client/*": ["node_modules/.prisma/client/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
